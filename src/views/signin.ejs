<%- include('./partials/head') %>
<link rel="stylesheet" href="stylesheet/signin/style.css" />
<%- include('./partials/close-head') %>

<body>
  <%- include('./partials/header') %>
  <main>

    <form method="POST">

      <header>
        <h1>
          <span>S</span>ign <span>I</span>n
        </h1>
        <img src="/svg/sign/sign.svg" alt="Sign's icon" width="24px" height="24px">
      </header>

      <span class="field">
        <label for="username">
          Username
        </label>
        <input placeholder="Username" type="text" name="username" required>
      </span>

      <span class="field">
        <label for="password">
          Password
        </label>
        <input placeholder="Password" type="password" name="password" required>
      </span>

      <button type="submit">Submit</button>

      <div id="link-to-signup">
        Not have an account yet?
        <a href="/signup">Sign Up</a>
      </div>

    </form>

  </main>

  <script src="script/signin.js"></script>
</body>

</html>