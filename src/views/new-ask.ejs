<%- include('./partials/head') %>
<link rel="stylesheet" href="stylesheet/new-ask.css" />
<%- include('./partials/close-head') %>

<body>
  <%- include('./partials/header') %>
  <main>

    <form method="post">
      <input data-aos="fade-left" data-aos-easing="linear" data-aos-duaration="3000" data-aos-delay="100" type="email" name="email" id="email" aria-label="Email" disabled value=<%= user.email %>>

      <input data-aos="fade-left" data-aos-easing="linear" data-aos-duaration="3000" data-aos-delay="200" type="text" name="subject" id="subject" aria-label="Assunto" placeholder="Assunto" maxlength="32" required>

      <textarea data-aos="fade-right" data-aos-easing="linear" data-aos-duaration="3000" data-aos-delay="300" name="description" id="description" aria-label="Descrição" placeholder="Descrição" required></textarea>

      <button data-aos="fade-up" data-aos-easing="linear" data-aos-duaration="3000" data-aos-delay="400" type="submit">Enviar</button>
    </form>

  </main>
</body>

</html>

<script src="script/new-ask.js"></script>
<%- include('partials/aos-cdn') %>