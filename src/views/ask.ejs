<%- include('./partials/head') %>
<link rel="stylesheet" href="stylesheet/ask.css" />
<%- include('./partials/close-head') %>

<body>
  <%- include('./partials/header') %>
  <%- include('./partials/back-to-faqs') %>

  <main>

    <section id="ask-info">

      <form>
        <input data-aos="fade-left" data-aos-easing="linear" data-aos-duaration="3000" data-aos-delay="100" data-aos-mirror="true" data-aos-once="false" type="email" aria-label="Email" disabled value="<%= ask.email %>">
        <input data-aos="fade-left" data-aos-easing="linear" data-aos-duaration="3000" data-aos-delay="400" data-aos-mirror="true" data-aos-once="false" type="text" aria-label="Assunto" disabled value="<%= ask.subject %>">
        <textarea data-aos="fade-left" data-aos-easing="linear" data-aos-duaration="3000" data-aos-delay="700" data-aos-mirror="true" data-aos-once="false" aria-label="Descrição" disabled><%= ask.description %></textarea>
      </form>

    </section>

    <section id="send-answer">

      <form method="post">
        <input data-aos="fade-right" data-aos-easing="linear" data-aos-duaration="3000" data-aos-delay="100" data-aos-mirror="true" data-aos-once="false" type="text" name="id" id="id" aria-label="id" disabled value="<%= ask._id %>">

        <input data-aos="fade-right" data-aos-easing="linear" data-aos-duaration="3000" data-aos-delay="100" data-aos-mirror="true" data-aos-once="false" type="email" name="email" id="email" aria-label="Email" disabled value="<%= user.email %>">
        <textarea data-aos="fade-right" data-aos-easing="linear" data-aos-duaration="3000" data-aos-delay="400" data-aos-mirror="true" data-aos-once="false" name="answer" id="answer" aria-label="Resposta" placeholder="Resposta" required></textarea>
        <button data-aos="fade-up" data-aos-easing="linear" data-aos-duaration="3000" data-aos-delay="700" data-aos-mirror="true" data-aos-once="false" data-aos-anchor-placement="bottom-bottom" type="submit">Enviar</button>
      </form>

    </section>

    <section id="answers-container">
      <div class="answers">
        
      </div>
    </section>

  </main>
</body>

</html>

<script src="script/new-answer.js"></script>
<script src="script/render-ask-answer.js"></script>
<%- include('partials/aos-cdn') %>